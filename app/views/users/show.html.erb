<h3 class="display-5  font-monospace text-center mt-5">Your Status Updates</h3>
<table>
    <thead>
    <tr>
    <th> DATE</th>
    <th> TASK</th>
    <th> PR-link</th>
    <th> HOUR-SPENT</th>
    <th colspan="3" > Action</th>
    </tr>
    </thead>
    <tbody>
<% @statuses.each do |status| %>
 <tr>
    <td><%= status.select_date%></td>
    <td><%=  status.tasks%></td>
    <td><%= status.prlinks%></td>
    <td><%= status.hours%></td>

<td><%= link_to "Edit", edit_user_path(@user) , class: "btn btn-outline-secondary"%></td>
<td><%= link_to "Delete", user_path(@user),method: :delete, class: "btn btn-outline-danger",data: {confirm: "are you sure ?"}%></td>  
<td><%= link_to "History",users_path , class: "btn btn-outline-dark"%></td>
</tr>
<% end %>
</tbody>
</table>

 <div id="page-content">
            <h3 class="text-center mt-4">
                <td><%= link_to 'New status update', new_user_path ,class:"btn btn-success"%></td>
            </h3>
        </div>
